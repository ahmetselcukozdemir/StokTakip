@model StokTakip.Models.Entity.Musteriler
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Müşteri</h2>

<style>
    .form-content {
        padding: 5%;
        border: 1px solid #ced4da;
        margin-bottom: 2%;
    }

    .form-control {
        border-radius: 1.5rem;
    }

    .btnSubmit {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        width: 20%;
        cursor: pointer;
        background: #0062cc;
        color: #fff;
    }
</style>


<form method="post">
    <div class="register-form">
        <div class="form">

            <div class="form-content">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Müşteri Adı :</label>
                            @*<input type="text" class="form-control" name="musteriAd" />*@
                            @Html.TextAreaFor(m => m.musteriAd, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.musteriAd, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group">
                            <label>Müşteri Soyadı :</label>
                            <input type="text" class="form-control" name="musteriSoyad" />
                        </div>
                       

                    </div>

                </div>

              <button class="btnSubmit">Müşteri Ekle</button>
                <a href="/Musteri/Index/" class="btnSubmit" style="background-color:red;">Geri Dön</a>
            </div>
        </div>
    </div>
</form>

